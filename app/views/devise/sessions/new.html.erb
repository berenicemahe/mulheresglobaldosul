<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container pt-2">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6 col-lg-3">
        <div class="row mt-3 d-flex justify-content-center">
          <div class="form-group">
            <div>
              <h2 class="text-center text-info mb-4 mt-5">Entrar</h2>
            </div>
            <div class="form-inputs">
              <div class="pb-2">
                <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "Enter your email" %>
              </div>
              <div class="pb-3">
                <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, placeholder: "••••••••" %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions mb-2">
                <%= f.submit "ENTRAR", class: "btn btn-info entrar" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="contrainer mb-5 ml-5 pl-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-3 mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
