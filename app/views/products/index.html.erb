  <h1 class="text-center">Searching product</h1>
  <div class="container">
      <%= form_tag products_path, method: :get do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Research" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>

  <div class="card-deck">
    <% @products.each do |product| %>
    <div class="row card-img-top col-md-3" >
      <img src="https://images.unsplash.com/photo-1525507119028-ed4c629a60a3?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=675&q=80" class="card-product-index-img" alt="...">
      <!-- <img class=""><%#= cl_image_tag product.photo.key, height: 280, width: 280, crop: :fill, alt: product.name %> -->
      <p><%= "#{product.name}" %></p>
      <p><%= product.description %></p>
      <p><%= "R$ #{product.price}" %></p>

        <% if policy(product).show? %>
          <%= link_to 'Detalhes', product %>
        <% end %>
    </div>
    <% end %>
  </div>

