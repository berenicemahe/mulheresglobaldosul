<div class="card-deck">
  <% @products.each do |product| %>
  <div class="row card-img-top col-md-3" >
    <img class=""><%= cl_image_tag product.photo.key, height: 280, width: 280, crop: :fill, alt: product.name %>
    <p><%= "#{product.name}" %></p>
  </div>
  <% end %>
</div>


<h1>Listing products</h1>

<div class= container>
<table>
  <thead>
    <tr>
      <th>Foto</th>
      <th>Name</th>
      <th>Description</th>
      <th>Pre√ßo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
       
         <td><%= cl_image_tag product.photo.key %></td> 
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <% if policy(product).show? %>
            <%= link_to 'Show', product %>
          <% end %>
        </td>
        <td>
          <% if policy(product).update? %>
            <%= link_to 'Edit', edit_product_path(product) %>
          <% end %>
        </td>
        <td>
          <% if policy(product).destroy? %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<% if policy(Product).create? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>